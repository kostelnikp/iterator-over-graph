{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "Build all (g++)",
        "command": "/usr/bin/g++",
        "args": [
          "-std=gnu++17",
          "-g",
          "ALGProject.cpp",
          "Graph.cpp",
          "DFSIterator.cpp",
          "BFSIterator.cpp",
          "-o",
          "ALGProject"
        ],
        "options": { "cwd": "${workspaceFolder}" },
        "problemMatcher": ["$gcc"],
        "group": { "kind": "build", "isDefault": true }
      }
    ]
  }